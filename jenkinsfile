pipeline {
    agent any
    tools {nodejs "node"}
    stages{
      stage("SCM"){
          steps {
             git(branch: 'qa', credentialsId: '44feaac4-248a-4a31-bdfc-dc372382fbb1', url: 'https://github.com/nehalBaigSystemLtd/SystemLtd-Form')
             sh 'ls -lrt'
          }
